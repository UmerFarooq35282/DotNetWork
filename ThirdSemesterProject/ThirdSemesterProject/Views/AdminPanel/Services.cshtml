
@{
    ViewBag.Title = "Services";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

<section class="is-hero-bar">
    <div class="flex flex-col md:flex-row items-center justify-between space-y-6 md:space-y-0">
        <h1 class="title">
            @ViewData["Title"]
        </h1>
    </div>
</section>
<a asp-action="CreateService" asp-controller="AdminPanel" style="background-color:#034efc; padding:10px; margin-left:20px; margin-bottom:10px; margin-top:30px; color:aliceblue; border-radius:10px;">
    Create New
</a>
<section class="section main-section">
    <div class="card has-table">
        <header class="card-header">
            <p class="card-header-title">
                <span class="icon"><i class="mdi mdi-account-multiple"></i></span>
                @ViewData["Title"]
            </p>
            <a href="#" class="card-header-icon">
                <span class="icon"><i class="mdi mdi-reload"></i></span>
            </a>
        </header>
        <div class="card-content">
            <table>
                <thead>
                    <tr>
                        <th>Service Name</th>
                        <th>Description</th>
                        <th>Charges</th>
                        <th>Code</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.SrvListItem)
                    {
                        <tr>
                            <td data-label="Name">@item.ServiceName</td>
                            <td data-label="Company">@item.ServiceDescription</td>
                            <td data-label="City">$@item.ServiceCharges</td>
                            <td data-label="City">@item.ServiceCode</td>
                            <td class="actions-cell">
                                <div class="buttons right nowrap">
                                    <a asp-action="UpdateServices" asp-controller="AdminPanel" asp-route-id="@item.ServiceId" class="button small green --jb-modal" data-target="sample-modal-2" type="button">
                                        Update
                                    </a>
                                    <a asp-action="DeleteServices" asp-controller="AdminPanel" asp-route-id="@item.ServiceId" class="button small red --jb-modal" data-target="sample-modal" type="button">
                                        Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

