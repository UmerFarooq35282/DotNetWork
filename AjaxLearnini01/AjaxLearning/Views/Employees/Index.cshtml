<div class="row">
    <div class="col-lg-12 mb-4">
        <a href="#"  id="AddEmp" class="btn btn-primary">Add Employe</a>
    </div>
    
    <div class="row">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>City</th>
                    <th>Country</th>
                    <th>Phone</th>
                    <th>Image</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="Load-Data">

            </tbody>
        </table>
    </div>
</div>

<!-- Button trigger modal -->

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Add Employee</h5>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="row m-2 form-group">
                        <div class="col-3">
                            <label class="form-label">Id</label>
                        </div>
                        <div class="col-9">
                            <input class="form-control"  disabled id="txtId" type="text" />
                        </div>
                    </div>
                    <div class="row m-2 form-group">
                        <div class="col-3">
                            <label class="form-label">Name</label>
                        </div>
                        <div class="col-9">
                            <input class="form-control" id="txtName" placeholder="Enter Name" type="text" />
                        </div>
                    </div>
                    <div class="row m-2 form-group">
                        <div class="col-3">
                            <label class="form-label">City</label>
                        </div>
                        <div class="col-9">
                            <input class="form-control" placeholder="Enter City" id="txtCity" type="text" />
                        </div>
                    </div>
                    <div class="row m-2 form-group">
                        <div class="col-3">
                            <label class="form-label">Country</label>
                        </div>
                        <div class="col-9">
                            <input class="form-control" placeholder="Enter Country" id="txtCountry" type="text" />
                        </div>
                    </div>
                    <div class="row m-2 form-group">
                        <div class="col-3">
                            <label class="form-label">Phone</label>
                        </div>
                        <div class="col-9">
                            <input class="form-control" placeholder="Enter Phone" id="txtPhone" type="text" />
                        </div>
                    </div>
                    <div class="row m-2 form-group">
                        <div class="col-3">
                            <label class="form-label">Image</label>
                        </div>
                        <div class="col-9">
                            <input class="form-control" placeholder="Enter Image" id="txtImage" type="text" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="closeBtn" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" id="saveBtn"  class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/custom.js"></script>