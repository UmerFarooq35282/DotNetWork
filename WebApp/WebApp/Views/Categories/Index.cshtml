@model List<Category>;
<h1>Categories</h1>
<br />
@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                    <td><a class="btn btn-linked" asp-controller="categories" asp-action="edit" asp-route-id="@category.CategoryId">Edit</a></td>
                    <td><a class="btn btn-linked" asp-controller="categories" asp-action="delete" asp-route-categoryid="@category.CategoryId" onclick="return confirmDelete()">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="Categories" asp-action="Add" class="btn btn-primary">Add</a>
}

@section Scripts{
    <script>
        function confirmDelete(){
            return confirm("Are you want to delete this Category")
        }
    </script>
}

