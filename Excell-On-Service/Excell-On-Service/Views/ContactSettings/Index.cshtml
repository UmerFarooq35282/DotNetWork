
@{
    ViewData["Title"] = "Contact Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container container-fluid">
    <div class="row mb-3">
        <h1 class="text-center">
            @ViewData["Title"]
        </h1>
    </div>
    <div class="row shadow-lg d-flex align-items-center justify-content-center py-4">
        <form class="col-6 mt-2" autocomplete="off">
            <div class="form-group mb-2">
                <label class="form-label">Name</label>
                <input type="text" autocomplete="off" placeholder="Your name" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label class="form-label">Address</label>
                <input type="text" autocomplete="off" placeholder="Your Address" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label class="form-label">Phone</label>
                <input type="text" autocomplete="off" placeholder="Your phone" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label class="form-label">Your Message</label>
                <textarea class="form-control" rows="5" aria-label="With textarea" placeholder="Your message"></textarea>
            </div>
            <div class="form-group mb-2">
                <input type="submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>