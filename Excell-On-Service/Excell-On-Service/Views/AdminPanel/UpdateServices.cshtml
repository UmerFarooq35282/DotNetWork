@model Excell_On_Service.Models.Service;
@{
    ViewData["Title"] = "Update Service";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

<section class="is-hero-bar">
    <div class="flex flex-col md:flex-row items-center justify-between space-y-6 md:space-y-0">
        <h1 class="title">
            @ViewData["Title"]
        </h1>
    </div>
</section>

<section class="section main-section">
    <div class="grid grid-cols-1 gap-6 lg:grid-cols-2 mb-6">
        <div class="card">
            <header class="card-header">
                <p class="card-header-title">
                    <span class="icon"><i class="mdi mdi-account-circle"></i></span>
                    
                </p>
            </header>
            <div class="card-content">
                <form asp-action="UpdateServices" enctype="multipart/form-data">
                    <div asp-validation-summary="All"></div>
                    @* <div class="field">
                    <label class="label">Image Upload</label>
                    <div class="field-body">
                    <div class="field file">
                    <label class="upload control">
                    <a class="button blue">
                    Upload
                    </a>
                    <input type="file" asp-for="Image" name="img">
                    </label>
                    </div>
                    </div>
                    </div> *@
                    <input type="hidden" asp-for="ServiceId"/>
                    <div class="field">
                        <label class="label">Name</label>
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <input type="file" asp-for="MainServiceImg" autocomplete="on" name="img" class="input" required>
                                </div>
                                <span asp-validation-for="MainServiceImg"></span>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="field">
                        <label class="label">Name</label>
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <input type="text" asp-for="ServiceName" class="input" required>
                                </div>
                                <span asp-validation-for="ServiceName"></span>
                            </div>
                        </div>
                    </div>
                    <div class="field">
                        <label class="label">E-mail</label>
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <input type="text" asp-for="ServiceCode" class="input" required>

                                </div>
                                <span asp-validation-for="ServiceCode"></span>
                            </div>
                        </div>
                    </div>
                    <div class="field">
                        <label class="label">Description</label>
                        <div class="control">
                            <textarea class="textarea" asp-for="ServiceDescription" placeholder="Enter Description here"></textarea>
                        </div>
                        <span asp-validation-for="ServiceDescription"></span>
                    </div>
                    <div class="field">
                        <label class="label">Salary</label>
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <input type="text" asp-for="ServiceCharges" autocomplete="on" class="input" required>

                                </div>
                                <span asp-validation-for="ServiceCharges"></span>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="field">
                        <div class="control">
                            <button type="submit" class="button green">
                                Submit
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="card">
            <header class="card-header">
                <p class="card-header-title">
                    <span class="icon"><i class="mdi mdi-account"></i></span>
                    Profile
                </p>
            </header>
            <div class="card-content">
                <div class="image w-48 h-48 mx-auto">
                    <img src="~/MainServiceImage/@Model.MainServiceImg" alt="John Doe" class="rounded-full">
                </div>
                <hr>
                <div class="field">
                    <label class="label">Name</label>
                    <div class="control">
                        <input type="text" readonly value="@Model.ServiceName" class="input is-static">
                    </div>
                </div>
                <hr>
                <div class="field">
                    <label class="label">E-mail</label>
                    <div class="control">
                        <input type="text" readonly value="@Model.ServiceCharges" class="input is-static">
                    </div>
                </div>
                <hr>
                <div class="field">
                    <label class="label">Role</label>
                    <div class="control">
                        <input type="text" readonly value="@Model.ServiceCode" class="input is-static">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

