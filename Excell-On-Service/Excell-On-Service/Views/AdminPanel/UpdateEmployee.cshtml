@model Excell_On_Service.Models.TblEmployee;
@{
    ViewData["Title"] = TempData["Page_Title"];
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

<section class="is-hero-bar">
    <div class="flex flex-col md:flex-row items-center justify-between space-y-6 md:space-y-0">
        <h1 class="title">
            @ViewData["Title"]
        </h1>
    </div>
</section>

<section class="section main-section">
    <div class="grid grid-cols-1 gap-6 lg:grid-cols-2 mb-6">
        <div class="card">
            <header class="card-header">
                <p class="card-header-title">
                    <span class="icon"><i class="mdi mdi-account-circle"></i></span>
                    EDIT @Model.RoleEmploye.ToUpper()
                </p>
            </header>
            <div class="card-content">
                <form asp-action="UpdateEmployee" enctype="multipart/form-data">
                    <div asp-validation-summary="All"></div>
                    @* <div class="field">
                    <label class="label">Image Upload</label>
                    <div class="field-body">
                    <div class="field file">
                    <label class="upload control">
                    <a class="button blue">
                    Upload
                    </a>
                    <input type="file" asp-for="Image" name="img">
                    </label>
                    </div>
                    </div>
                    </div> *@
                    <div class="field">
                        <label class="label">Name</label>
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <input type="file" asp-for="Image" autocomplete="on" name="img" class="input" required>
                                </div>
                                <span asp-validation-for="Image"></span>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="field">
                        <label class="label">Name</label>
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <input type="text" asp-for="Name" autocomplete="on"  class="input" required>
                                </div>
                                <span asp-validation-for="Name"></span>
                            </div>
                        </div>
                    </div>
                    <div class="field">
                        <label class="label">E-mail</label>
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <input type="email" asp-for="Email" autocomplete="on"  class="input" required>

                                </div>
                                <span asp-validation-for="Email"></span>
                            </div>
                        </div>
                    </div>
                    <div class="field">
                        <label class="label">Select Role</label>
                        <div class="control">
                            <div class="select">
                                <select asp-for="RoleEmploye">
                                    <option>employees</option>
                                    <option>ActiveAdmin</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="field">
                        <label class="label">Salary</label>
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <input type="text" asp-for="Salary" autocomplete="on" class="input" required>

                                </div>
                                <span asp-validation-for="Salary"></span>
                            </div>
                        </div>
                    </div>
                    <div class="field">
                        <label class="label">Address</label>
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <input type="text" asp-for="Address" autocomplete="on"  class="input" required>

                                </div>
                                <span asp-validation-for="Address"></span>
                            </div>
                        </div>
                    </div>
                    <div class="field">
                        <label class="label">Phone</label>
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <input type="text" asp-for="PhoneNumber" autocomplete="on"  class="input" required>

                                </div>
                                <span asp-validation-for="PhoneNumber"></span>
                            </div>
                        </div>
                    </div>
                    <div class="field">
                        <label class="label">Password</label>
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <input type="password" asp-for="Password"  class="input" required>

                                </div>
                                <span asp-validation-for="Password"></span>
                            </div>
                        </div>
                    </div>
                    <div class="field">
                        <label class="label">Confirm Password</label>
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <input type="password" asp-for="CPassword"  class="input" required>

                                </div>
                                <span asp-validation-for="CPassword"></span>
                            </div>
                        </div>
                    </div>
                    <div class="field">
                        <label class="label">City</label>
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <input type="text" asp-for="City" class="input" required>

                                </div>
                                <span asp-validation-for="City"></span>
                            </div>
                        </div>
                    </div>
                    <div class="field">
                        <label class="label">Select Service</label>
                        <div class="control">
                            <div class="select">
                                <select asp-items="@ViewBag.ServiceId" asp-for="ServiceId"></select>
                            </div>
                        </div>
                    </div>
                    <div class="field">
                        <label class="label">Select Department</label>
                        <div class="control">
                            <div class="select">
                                <select asp-items="@ViewBag.DepartmentId" asp-for="DepartmentId"></select>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="field">
                        <div class="control">
                            <button type="submit" class="button green">
                                Submit
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="card">
            <header class="card-header">
                <p class="card-header-title">
                    <span class="icon"><i class="mdi mdi-account"></i></span>
                    Profile
                </p>
            </header>
            <div class="card-content">
                <div class="image w-48 h-48 mx-auto">
                    <img src="~/EmployeeImages/@Model.Image" alt="John Doe" class="rounded-full">
                </div>
                <hr>
                <div class="field">
                    <label class="label">Name</label>
                    <div class="control">
                        <input type="text" readonly value="@Model.Name" class="input is-static">
                    </div>
                </div>
                <hr>
                <div class="field">
                    <label class="label">E-mail</label>
                    <div class="control">
                        <input type="text" readonly value="@Model.Email" class="input is-static">
                    </div>
                </div>
                <hr>
                <div class="field">
                    <label class="label">Role</label>
                    <div class="control">
                        <input type="text" readonly value="@Model.RoleEmploye" class="input is-static">
                    </div>
                </div>
                <hr>
                <div class="field">
                    <label class="label">Password</label>
                    <div class="control">
                        <input type="text" readonly value="@Model.Password" class="input is-static">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

