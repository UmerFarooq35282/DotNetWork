@model IEnumerable<Excell_On_Service.Models.SubService>
@{
    ViewData["Title"] = "Sub Services";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

<section class="is-hero-bar">
    <div class="flex flex-col md:flex-row items-center justify-between space-y-6 md:space-y-0">
        <h1 class="title">
            @ViewData["Title"]
        </h1>
    </div>
</section>
<a asp-action="CreateSubService" asp-controller="AdminPanel" style="background-color:#034efc; padding:10px; margin-left:20px; margin-bottom:10px; margin-top:30px; color:aliceblue; border-radius:10px;">
    Create New
</a>
<section class="section main-section">
    <div class="card has-table">
        <header class="card-header">
            <p class="card-header-title">
                <span class="icon"><i class="mdi mdi-account-multiple"></i></span>
                @ViewData["Title"]
            </p>
            <a href="#" class="card-header-icon">
                <span class="icon"><i class="mdi mdi-reload"></i></span>
            </a>
        </header>
        <div class="card-content">
            <table>
                <thead>
                    <tr>
                        <th>Service Name</th>
                        <th>Description</th>
                        <th>Charges/Month</th>
                        <th>Code</th>
                        <th>Main Service</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td data-label="Name">@Html.DisplayFor(itemModel => item.SubServiceName)</td>
                            <td data-label="Company">@Html.DisplayFor(itemModel => item.SubServiceDescription)</td>
                            <td data-label="City">$@Html.DisplayFor(itemModel => item.SubServiceCharges)</td>
                            <td data-label="City">@Html.DisplayFor(itemModel => item.SubServiceCode)</td>
                            <td data-label="City">@Html.DisplayFor(itemModel => item.Service.ServiceName)</td>
                            <td class="actions-cell">
                                <div class="buttons right nowrap">
                                    <a asp-controller="AdminPanel" asp-action="UpdateSubServices" asp-route-id="@item.SubServiceId" class="button small green --jb-modal" data-target="sample-modal-2" type="button">
                                        <span class="icon"><i class="mdi mdi-eye"></i></span>
                                    </a>
                                    <a asp-controller="AdminPanel" asp-action="DeleteSubServices" asp-route-id="@item.SubServiceId" class="button small red --jb-modal" data-target="sample-modal">
                                        <span class="icon"><i class="mdi mdi-trash-can"></i></span>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
