@model IEnumerable<SearchingDemo.Models.Product>;
@{
    ViewData["Title"] = "Home Page";
}

<div class="w-100 h-100 row container container-fluid mx-0">
    <div class="row d-flex justify-content-between">
            @foreach(var item in Model)
            {
                <div class="col-3 text-black">
                    <div class="card" style="width: 18rem;">
                        <img class="card-img-top" src="~/ProductImages/@item.Image" height="200"  alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Description.</p>
                            <p class="card-text">Rs. @item.Price</p>
                            <a asp-route-id="@item.Id" asp-action="ProDetail" asp-controller="Products" class="btn btn-primary">Buy Now</a>
                        </div>
                    </div>
                </div>
            }
    </div>
</div>
