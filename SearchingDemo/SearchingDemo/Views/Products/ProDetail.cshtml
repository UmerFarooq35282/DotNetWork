@model SearchingDemo.Models.Product;
@{
    ViewData["Title"] = "ProDetail";
}

<div class="row mb-2">
    <h1 class="text-center shadow-lg py-3">Product Detail</h1>
</div>
<div class="row container-fluid d-flex">
    <div class="col-6">
        <img style="width:500px; height:500px" class="" src="~/ProductImages/@Model.Image" />
    </div>
    <div class="col-6">
        <div class="d-flex align-items-center gap-5">
            <h1>Name</h1>
            <h3>@Model.Name</h3>
        </div>
        <div class="d-flex align-items-center gap-5">
            <h1>Description</h1>
            <h3>@Model.Description</h3>
        </div>
        <div class="d-flex align-items-center gap-5">
            <h1>Price</h1>
            <h3>@Model.Price</h3>
        </div>
    </div>
</div>



