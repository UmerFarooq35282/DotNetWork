@model IEnumerable<SearchingDemo.Models.Category>;
@{
    ViewData["Title"] = "Index";
}

<a id="ModalBtn" class="btn btn-primary mb-2">Create New</a>
<div class="row">
    <div class="row text-center mb-3">
        <h1 class="text-capitalize text-primary">Categories</h1>
    </div>
    <div class="row mx-5">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Category Id</th>
                    <th>Category Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(ItemName => item.Categoryid)</td>
                        <td>@Html.DisplayFor(ItemName => item.CategoryName)</td>
                        <td>
                            <a class="btn btn-primary" asp-action="EditCategory" asp-controller="Categories" asp-route-id="@item.Categoryid">Edit</a> ||
                            <a class="btn btn-danger" asp-action="DeleteCategories" asp-controller="Categories" asp-route-id="@item.Categoryid">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="EmployeeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
            </div>
            <div class="modal-body">
                <div class="row mb-4">
                    <div class="row form-group">
                        <div class="col-4">
                            <label class="form-label">CategoryId</label>
                        </div>
                        <div class="col-8">
                            <input type="text" disabled class="form-control" id="CategoryId" />
                        </div>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="row form-group">
                        <div class="col-4">
                            <label class="form-label">Category Name</label>
                        </div>
                        <div class="col-8">
                            <input type="text" placeholder="Enter Category Name" id="CategoryName" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="CloseBtn" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" id="SaveBtn" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/custom.js"></script>