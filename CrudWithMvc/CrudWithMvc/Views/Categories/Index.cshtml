@model IEnumerable<CrudWithMvc.Models.Category>;
@{
    ViewData["Title"] = "Index";
}

<a asp-action="CreateCategory" asp-controller="Categories" class="btn btn-primary p-3 mb-5">Create</a>

<div class="container flex align-content-center justify-content-center">
    <table class="table table-hover table-responsive">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(option => option.CategoryName)</th>
                <th>@Html.DisplayNameFor(option => option.Slug)</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Slug)</td>
                    <td><a class="btn h5 btn-primary" asp-action="EditCategory" asp-controller="Categories" asp-route-id="@item.CategoryId">Edit</a></td>
                    <td><a class="btn h5 btn-success" asp-action="CategoryDetails" asp-controller="Categories" asp-route-id="@item.CategoryId">Detail</a></td>
                    <td><a class="btn h5 btn-danger" asp-action="DeleteCategory" asp-controller="Categories" asp-route-id="@item.CategoryId">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
