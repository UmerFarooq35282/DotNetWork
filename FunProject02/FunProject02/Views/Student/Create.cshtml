@using FunProject02.Models;
@model FunProject02.Models.Student;
@{
    ViewData["Title"] = "Adding Student";
    
}
<h3>@ViewData["Title"].ToString()</h3>

<form >
    <div class="mb-3">
        <label class="form-label">Student Name</label>
        <input type="text" class="form-control" asp-for="SName" />
        <span asp-validation-for="SName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Father Name</label>
        <input type="text" class="form-control" asp-for="FName" />
        <span asp-validation-for="FName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Gender</label>
        <input type="text" class="form-control" asp-for="Gender" />
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Student Class</label>
        <input type="text" class="form-control" asp-for="SClass" />
        <span asp-validation-for="SClass" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Student Address</label>
        <input type="text" class="form-control" asp-for="SAddress" />
        <span asp-validation-for="SAddress" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary row" >Save </button>
</form>
