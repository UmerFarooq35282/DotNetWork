    function CreateNew() {
        ClearText()
        $("#btnModal").trigger('click')
    }

    function ClearText() {
        $("#txtId").val('')
        $("#txtName").val('')
        $("#txtState").val('')
        $("#txtCity").val('')
        $("#txtSalary").val('')
    }
    // function GetAllEmploye(){
