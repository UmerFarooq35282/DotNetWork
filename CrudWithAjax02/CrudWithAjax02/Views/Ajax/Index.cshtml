    function save(){
        var isproceed = true;
        var id = $("#txtid").val()
        var name = $("#txtname").val()
        var state = $("#txtstate").val()
        var city = $("#txtcity").val()
        var salary = $("#txtsalary").val()

        if (name == '') {
            isproceed = false
            $("#txtname").css('border-style' , 'red')
        } else{
            $("#txtname").css('border-style' , '#ccc')
        }
        if (isproceed) {
            var obj = new object();
            obj.name = name
            obj.state = state
            obj.city = city
            obj.salary = salary
            $.ajax({
                url: "/ajax/saveemploye",
                method: 'post',
                data: obj,
                contenttype: "application/x-www-form-urlencoded; charset=utf-8;",
                success: (data) => {
                    alert('data saved')
                },
                error: (err) => {
                    alert(err)
                }

            })
        }
    }

    
</script>